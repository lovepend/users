// 1. ROW_BASED 여부 체크박스 형태
    {
      headerName: 'Row Based',
      field: 'isRowBased', // 가상 필드
      maxWidth: 100,
      valueGetter: params => {
        const item = allBrokerList.value.find(i => i.GROUP === params.data.TOOL_ID && i.NAME === params.data.TOOL_TYPE);
        return item?.ROW_BASED_YN === 'Y'; // 결과는 true 또는 false
      },
      cellRenderer: 'agCheckboxRenderer', // AG Grid 기본 체크박스 렌더러
      cellClass: 'grid-cell-centered'
    },
    // 2. MENU_VISIBLE 여부 체크박스 형태
    {
      headerName: 'Menu Visible',
      field: 'isMenuVisible',
      maxWidth: 110,
      valueGetter: params => {
        const item = allBrokerList.value.find(i => i.GROUP === params.data.TOOL_ID && i.NAME === params.data.TOOL_TYPE);
        return item?.MENU_VISIBLE_YN === 'Y'; // 결과는 true 또는 false
      },
      cellRenderer: 'agCheckboxRenderer',
      cellClass: 'grid-cell-centered'
    },
