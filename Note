<body>
    <div class="container">
        <h1>나만의 간단 노트</h1>
        
        <div class="button-group">
            <button id="editBtn">편집</button>
            <button id="saveBtn">저장</button>
        </div>

        <textarea id="myTextArea" placeholder="여기에 텍스트를 입력하거나 붙여넣으세요."></textarea>
    </div>

    <footer>
        &copy; 2024 Simple Note. All rights reserved.
    </footer>

    <script>
        const myTextArea = document.getElementById('myTextArea');
        const editBtn = document.getElementById('editBtn');
        const saveBtn = document.getElementById('saveBtn');
        const localStorageKey = 'simpleNoteContent';

        // 페이지 로드 시 저장된 내용 불러오기
        document.addEventListener('DOMContentLoaded', () => {
            const savedContent = localStorage.getItem(localStorageKey);
            if (savedContent) {
                myTextArea.value = savedContent;
            }
            // 초기 상태는 읽기 전용 (보기 모드)
            myTextArea.disabled = true;
            editBtn.textContent = '편집'; // 초기에는 편집 버튼으로 표시
            saveBtn.disabled = true; // 저장 버튼 비활성화
        });

        // 편집 버튼 클릭 이벤트
        editBtn.addEventListener('click', () => {
            if (myTextArea.disabled) {
                myTextArea.disabled = false; // 편집 활성화
                myTextArea.focus();
                editBtn.textContent = '보기'; // 편집 모드에서는 "보기" 버튼으로 변경
                saveBtn.disabled = false; // 저장 버튼 활성화
            } else {
                // 편집 중이었다면 보기 모드로 전환
                myTextArea.disabled = true; // 읽기 전용
                editBtn.textContent = '편집'; // 보기 모드에서는 "편집" 버튼으로 변경
                saveBtn.disabled = true; // 저장 버튼 비활성화
            }
        });

        // 저장 버튼 클릭 이벤트
        saveBtn.addEventListener('click', () => {
            localStorage.setItem(localStorageKey, myTextArea.value);
            alert('내용이 성공적으로 저장되었습니다!');
            
            // 저장 후 자동으로 보기 모드로 전환
            myTextArea.disabled = true;
            editBtn.textContent = '편집';
            saveBtn.disabled = true;
        });
    </script>
</body>
</html>
