<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Note</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/themes/prism-tomorrow.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/line-numbers/prism-line-numbers.min.css" rel="stylesheet" />
    <style>
        :root { --bg-color: #1e1e1e; --header-bg: #2d2d2d; --accent-color: #007acc; }
        body, html { margin: 0; padding: 0; height: 100%; background-color: var(--bg-color); color: #ccc; font-family: 'Consolas', monospace; overflow: hidden; }
        .top-bar { height: 35px; background: var(--header-bg); display: flex; justify-content: space-between; align-items: center; padding: 0 15px; border-bottom: 1px solid #3e3e3e; }
        .logo { font-size: 11px; color: #858585; letter-spacing: 1px; }
        .btn-group { display: flex; gap: 6px; }
        button { background: #3c3c3c; color: #fff; border: 1px solid #454545; padding: 2px 10px; border-radius: 2px; cursor: pointer; font-size: 11px; height: 22px; }
        button#saveBtn { background: var(--accent-color); border: none; }
        button:disabled { opacity: 0.3; }
        .main-container { position: relative; height: calc(100% - 35px); width: 100%; }
        textarea, #code-display { position: absolute; width: 100%; height: 100%; padding: 15px; box-sizing: border-box; font-size: 14px; line-height: 1.6; border: none; outline: none; tab-size: 4; }
        textarea { background: var(--bg-color); color: #d4d4d4; z-index: 2; resize: none; }
        #code-display { z-index: 1; display: none; overflow: auto; }
        pre[class*="language-"].line-numbers { margin: 0; padding: 15px 15px 15px 3.8em; height: 100%; background: var(--bg-color) !important; }
    </style>
</head>
<body class="line-numbers">

<div class="top-bar">
    <div class="logo">NOTE</div>
    <div class="btn-group">
        <button id="editBtn">Edit (Ctrl+E)</button>
        <button id="saveBtn" disabled>Save (Ctrl+S)</button>
    </div>
</div>

<div class="main-container">
    <textarea id="editor" spellcheck="false" placeholder="Loading..."></textarea>
    <div id="code-display"><pre class="line-numbers"><code id="highlight-area" class="language-javascript"></code></pre></div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/prism.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.29.0/plugins/line-numbers/prism-line-numbers.min.js"></script>

<script>
    const editor = document.getElementById('editor');
    const codeDisplay = document.getElementById('code-display');
    const highlightArea = document.getElementById('highlight-area');
    const editBtn = document.getElementById('editBtn');
    const saveBtn = document.getElementById('saveBtn');
    
    const STORAGE_KEY = 'my_local_note_data';
    const FILE_URL = './data.txt'; // 배포할 때 같이 올릴 파일명

    // 초기화: 서버 파일 로드 vs 로컬 저장소 로드
    window.onload = async () => {
        const saved = localStorage.getItem(STORAGE_KEY);
        
        if (saved) {
            // 1. 브라우저에 저장된 내역이 있으면 그걸 우선으로 불러옴
            editor.value = saved;
        } else {
            // 2. 저장된 내역이 없으면 서버에 같이 올린 data.txt를 읽어옴
            try {
                const response = await fetch(FILE_URL);
                if (response.ok) {
                    editor.value = await response.text();
                }
            } catch (e) {
                editor.value = "Welcome! 수정 후 저장하세요.";
            }
        }
        setMode(false); // 초기 상태는 보기 모드
    };

    function updateHighlight() {
        highlightArea.innerText = editor.value;
        Prism.highlightElement(highlightArea);
    }

    function setMode(isEdit) {
        if (isEdit) {
            editor.style.display = "block";
            codeDisplay.style.display = "none";
            saveBtn.disabled = false;
            editBtn.textContent = "View";
            editor.focus();
        } else {
            updateHighlight();
            editor.style.display = "none";
            codeDisplay.style.display = "block";
            saveBtn.disabled = true;
            editBtn.textContent = "Edit";
        }
    }

    function save() {
        if (editor.style.display === "none") return;
        // 브라우저 로컬 저장소에 저장
        localStorage.setItem(STORAGE_KEY, editor.value);
        saveBtn.textContent = "Saved!";
        setTimeout(() => {
            saveBtn.textContent = "Save";
            setMode(false);
        }, 600);
    }

    editBtn.addEventListener('click', () => setMode(editor.style.display === "none"));
    saveBtn.addEventListener('click', save);

    // 단축키 및 탭 키 처리 (기존과 동일)
    window.addEventListener('keydown', (e) => {
        const isCtrl = e.ctrlKey || e.metaKey;
        if (isCtrl && e.key.toLowerCase() === 'e') { e.preventDefault(); setMode(editor.style.display === "none"); }
        if (isCtrl && e.key.toLowerCase() === 's') { e.preventDefault(); save(); }
    });

    editor.addEventListener('keydown', function(e) {
        if (e.key === 'Tab') {
            e.preventDefault();
            const start = this.selectionStart;
            this.value = this.value.substring(0, start) + "    " + this.value.substring(this.selectionEnd);
            this.selectionStart = this.selectionEnd = start + 4;
        }
    });
</script>
</body>
</html>
