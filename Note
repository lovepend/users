    <title>간단 메모장 (다크 모드)</title>
    <style>
        /* 기본 스타일 및 다크 모드 설정 */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #1a1a1a; /* 어두운 배경 */
            color: #e0e0e0; /* 밝은 텍스트 */
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
        }

        .container {
            width: 90%;
            max-width: 800px;
            background-color: #2c2c2c; /* 컨테이너 배경 */
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        h1 {
            color: #76c7c0; /* 제목 색상 */
            text-align: center;
            margin-bottom: 25px;
            font-size: 2.2em;
        }

        .button-group {
            display: flex;
            gap: 15px;
            justify-content: center;
        }

        button {
            padding: 12px 25px;
            border: none;
            border-radius: 8px;
            font-size: 1em;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
            color: #ffffff;
            font-weight: bold;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
        }

        button#editBtn {
            background-color: #5cb85c; /* 편집 버튼 */
        }
        button#editBtn:hover {
            background-color: #4cae4c;
            transform: translateY(-2px);
        }

        button#saveBtn {
            background-color: #0275d8; /* 저장 버튼 */
        }
        button#saveBtn:hover {
            background-color: #025aa5;
            transform: translateY(-2px);
        }

        textarea {
            width: calc(100% - 20px); /* 패딩 고려 */
            height: 400px;
            padding: 15px;
            border: 1px solid #444; /* 어두운 테두리 */
            border-radius: 8px;
            background-color: #3a3a3a; /* 텍스트 영역 배경 */
            color: #f0f0f0; /* 텍스트 영역 글씨색 */
            font-size: 1.1em;
            line-height: 1.6;
            resize: vertical; /* 수직 크기 조절 허용 */
            transition: border-color 0.3s ease, background-color 0.3s ease;
        }

        textarea:focus {
            outline: none;
            border-color: #76c7c0; /* 포커스 시 테두리 색상 */
            box-shadow: 0 0 0 3px rgba(118, 199, 192, 0.3);
        }

        textarea:disabled {
            background-color: #2a2a2a; /* 비활성화 시 배경 */
            color: #b0b0b0;
            cursor: not-allowed;
            border-style: dashed; /* 비활성화 시 점선 테두리 */
