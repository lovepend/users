import pdfkit
import os

# 1. HTML 파일들이 있는 경로 설정
html_dir = './out'  # JSDoc 빌드 결과 폴더
html_files = [os.path.join(html_dir, f) for f in os.listdir(html_dir) if f.endswith('.html')]

# 2. 메인 파일(index.html)을 가장 앞으로 정렬 (선택 사항)
html_files.sort() 

# 3. PDF 변환 옵션 설정
options = {
    'enable-local-file-access': None, # 로컬 CSS/이미지 허용
    'encoding': "UTF-8",
    'margin-top': '0.75in',
    'footer-right': '[page] of [topage]',
}

# 4. 변환 실행 (리스트를 통째로 넣으면 하나로 합쳐집니다)
pdfkit.from_file(html_files, 'jsdoc_documentation.pdf', options=options)



pip install pdfkit
