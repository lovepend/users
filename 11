' 폼 내부의 확인 버튼 클릭 시 예시
Private Sub btnOk_Click()
    Dim selectedDates As String
    ' (가정) 리스트박스나 캘린더에서 선택된 날짜들을 루프 돌며 합침
    For i = 0 To ListBox1.ListCount - 1
        If ListBox1.Selected(i) Then
            selectedDates = selectedDates & ListBox1.List(i) & ", "
        End If
    Next i
    
    ' 마지막 쉼표 제거 후 셀에 입력
    If Len(selectedDates) > 0 Then
        ActiveCell.Value = Left(selectedDates, Len(selectedDates) - 2)
    End If
    Unload Me
End Sub
